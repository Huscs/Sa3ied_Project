
<h5 align="center">Volunteers List</h5>

<div align="center">
	<%= form_for(:event, :html => {class: "form-horizontal", role: "form"}, url: rateme_path) do |f| %>

	<% @users.each do |user| %>
		
		<ul class="listing">
			<div class="row">
				<div class="well col-md-4 col-md-offset-4">
						<li><%= link_to gravatar_for(user), user_path(user) %></li>
								<li class="user-title">
								<%= link_to user.username, user_path(user) %>
						</li>
						<br></br>
						
				

						<li>

						<strong><%= link_to "Rate Me", rateme_path(@user, :id => user.id) %></strong>

						</li>

						<li>
							<h1>Rating: <%= user.rating %></h1>
							
						</li>
							
				</div>
							
			</div>
		</ul>
	<% end %>
	<% end %>
</div>